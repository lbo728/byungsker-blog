---
import BaseLayout from "../../layout/BaseLayout.astro";
//
import { getPostById } from "../../api/getPostById";
import { getPosts } from "../../api/getPosts";
//
import { markedReadContent } from "../../utils/marked";
//

export const getStaticPaths = async () => {
  const posts = await getPosts();

  return posts.map((post) => ({
    params: { slug: post.slug },
  }));
};

const { slug } = Astro.params;
const post = await getPostById(slug);
const pageTitle = post ? post.title : "Post Not Found";

const parsedContent = post ? markedReadContent(post.content) : "";
---

<BaseLayout pageTitle={pageTitle}>
  {
    post ? (
      <div class="body">
        <div class="tags">
          Tags: {post.tags ? post.tags.join(", ") : "No tags"}
        </div>
        <Fragment class="content" set:html={parsedContent} />
      </div>
    ) : (
      <div>
        <h1>Post Not Found</h1>
        <p>The post you are looking for does not exist.</p>
      </div>
    )
  }
</BaseLayout>

<style>
  .body {
    max-width: 800px;
    margin: 0 auto;
  }

  .tags {
    margin-top: 20px;
    font-style: italic;
  }
</style>
