---
import BaseLayout from "@layout/BaseLayout.astro";
const pageTitle: string = "Byungsker - Admin";
---

<BaseLayout pageTitle={pageTitle}>
  <h1>글쓰기</h1>

  <form class="form-style">
    <label class="form-wrapper">
      제목
      <div class="form-input-list">
        <input type="text" class="form-input" required />
      </div>
    </label>
    <label class="form-wrapper">
      내용
      <textarea required class="form-textarea"></textarea>
    </label>
    <button type="submit" class="button-primary">글 올리기</button>
  </form>
</BaseLayout>

<script></script>
<style>
  .form-style {
    display: flex;
    width: 100%;
    flex-direction: column;
    gap: 24px;
  }

  .form-wrapper {
    display: flex;
    flex-direction: column;
    gap: 8px;
    font-size: 14px;
    color: #a2a2a2;

    .form-input-list {
      display: flex;
      width: 100%;

      .form-input {
        display: flex;
        width: 100%;
        height: 40px;
      }
    }

    .form-textarea {
      width: 100%;
      height: 320px;
    }
  }

  .button-primary {
    width: 100%;
    background-color: rgb(7, 138, 167);
    color: white;
    height: 48px;
    border: none;
    border-radius: 8px;
  }
</style>
